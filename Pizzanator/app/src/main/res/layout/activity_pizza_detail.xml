<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katarn.pizzanator.PizzaDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/detailName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailAddress"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detailName"
        android:layout_alignEnd="@+id/detailName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailWeb"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/detailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/detailAddress"
        android:textStyle="italic"
        android:textColor="#4a48ff"
        android:onClick="openWebsite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/detailNumber"
        android:layout_below="@+id/detailWeb"
        android:layout_alignEnd="@+id/detailAddress"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:textStyle="italic"
        android:textColor="#4a48ff"
        android:onClick="openPhone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map"
        android:id="@+id/map"
        android:layout_below="@+id/detailNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="showMap"/>
</RelativeLayout>
